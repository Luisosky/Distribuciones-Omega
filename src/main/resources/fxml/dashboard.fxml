<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.distribuciones.omega.controllers.DashboardController">

  <!-- Header opcional -->
  <top>
    <HBox style="-fx-background-color: #2c3e50;" alignment="CENTER_LEFT" spacing="10">
      <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
      <Label text="Distribuciones Ómega" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
    </HBox>
  </top>

  <!-- Menú lateral -->
  <left>
    <VBox fx:id="menuBox" spacing="5" style="-fx-background-color: #ecf0f1;" prefWidth="180">
      <Button fx:id="btnClientes" graphicTextGap="10" text="👤 Gestión de Clientes"/>
      <Button fx:id="btnProductos" graphicTextGap="10" text="📦 Gestión de Productos"/>
      <Button fx:id="btnInventario" graphicTextGap="10" text="📋 Inventario"/>
      <Button fx:id="btnCotizacion" graphicTextGap="10" text="📝 Cotización / Orden"/>
      <Button fx:id="btnVentas" graphicTextGap="10" text="💵 Facturación y cobro"/>
      <Button fx:id="btnReportes" graphicTextGap="10" text="📊 Reportes"/>
    </VBox>
  </left>

  <!-- Panel dinámico -->
  <center>
    <AnchorPane fx:id="contentArea" />
  </center>
</BorderPane>